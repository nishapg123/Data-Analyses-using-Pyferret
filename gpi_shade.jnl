SET MEMORY/SIZE=500
use "/home/nisha/Documents/OHC_Work/AS_warming_2000_2022/GPI/gpi.nc"
set region/t=15-jan-2000:30-dec-2022/y=-30:30/x=30:120


set mode metafile
define viewport/x=0.02,0.52/y=0.47,0.97 v1
define viewport/x=0.47,0.97/y=0.47,0.97 v2

PPL AXLSZE 0.13,0.13
